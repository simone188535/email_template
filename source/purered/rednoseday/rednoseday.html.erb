            }
            .promo-button-link {
                font-size: 20px;
                width: 200px;
            }

            .promo-text-wrap {
                width: 215px;
                -webkit-text-size-adjust: none;
                font-family: Helvetica, Arial, sans-serif;
                font-size: 15pt;
                text-decoration: none;
                line-height: 18pt;
                display: inline-block;
                color: #515151;
            }

            .article-img a {
                text-align: right;
            }
            .article-img img {}
            .preheader-text {
                color: #515151;
                font-size: 18px;
            }
            .container td {
                display: block;
                width: 600px;
                max-width: 600px !important;
            }
            .container td.spacer {
                width: 15px !important;
            }
            .footer-subtext,
            .footer-text {
                color: #ffffff;
                font-family: Helvetica, Arial, sans-serif;
                font-size: 30px;
                text-align: center;
                line-height: 40px;
            }
            .header-text {
                color: #ffffff;
                font-family: Helvetica, Arial, sans-serif;
                text-transform: uppercase;
                font-size: 24px;
                line-height: 29px;
                text-align: center;
            }
            .footer-text span {
                font-size: 40px;
            }

            .footer-subtext {
                font-size: 14px;
                line-height: 18px;
            }

            .footer-logo {
                display: inline-block !important;
            }

            img.inline {
                display: inline-block !important;
            }

